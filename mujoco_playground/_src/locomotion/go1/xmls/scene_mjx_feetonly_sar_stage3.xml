    </body>
    <body name="beam9" pos="3.0 0.2 0.15" euler="0 0 40">
      <geom name="ibeam9" type="box" size="0.4 0.1 0.1" material="rust_metal" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
