    </body>
    <body name="beam4" pos="1.6 0 0.15" euler="0 0 15">
      <geom name="ibeam4" type="box" size="0.4 0.1 0.1" material="rust_metal" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam5" pos="1.8 0.18 0.15" euler="0 0 -45">
      <geom name="ibeam5" type="box" size="0.4 0.1 0.1" material="rust_metal" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam6" pos="2.2 -0.15 0.15" euler="0 0 75">
      <geom name="ibeam6" type="box" size="0.4 0.1 0.1" material="rust_metal" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam7" pos="2.5 0.1 0.15" euler="0 0 -60">
      <geom name="ibeam7" type="box" size="0.4 0.1 0.1" material="rust_metal" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam8" pos="2.8 -0.1 0.15" euler="0 0 0">
