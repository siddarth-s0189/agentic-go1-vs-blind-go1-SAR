<mujoco model="go1 SAR stage 1 - Industrial Squeeze">
  <include file="go1_mjx_feetonly_sar.xml"/>

  <statistic center="0 0 0.1" extent="0.8" meansize="0.04"/>

  <visual>
    <headlight diffuse=".8 .8 .8" ambient=".2 .2 .2" specular="1 1 1"/>
    <rgba force="1 0 0 1"/>
    <global azimuth="120" elevation="-20"/>
    <map force="0.01"/>
    <scale forcewidth="0.3" contactwidth="0.5" contactheight="0.2"/>
    <quality shadowsize="8192"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2="1 1 1" width="800" height="800"/>
    <texture type="2d" name="groundplane" file="assets/rocky_texture.png"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance=".8"/>
    <material name="floor_dark" rgba="0.1 0.1 0.1 1"/>
    <material name="concrete" rgba="0.3 0.3 0.3 1"/>
    <material name="rust_metal" rgba="0.5 0.1 0.05 1" specular="0.8"/>
    <material name="charcoal_wall" rgba="0.15 0.15 0.15 1"/>
    <hfield name="hfield" file="assets/hfield.png" size="10 10 .05 1.0"/>
  </asset>

  <worldbody>
    <light pos="0 0 5" dir="0 0 -1" directional="true" castshadow="true"/>
    <geom name="floor" type="hfield" hfield="hfield" material="groundplane" contype="1" conaffinity="0" priority="1"
      friction="1.0"/>

    <site name="goal" pos="5 0 0" rgba="1 0 0 1" size="0.1"/>

    <camera name="hero_view" pos="2 0 0.5" xyaxes="1 0 0 0 0.7 0.7" mode="targetbodycom" target="trunk" fovy="60"/>
    <camera name="follow_side" pos="0 1.5 0.3" xyaxes="1 0 0 0 0 1" mode="targetbodycom" target="trunk"/>
    <camera name="birds_eye" pos="2.5 0 3.5" xyaxes="1 0 0 0 1 0" fovy="70"/>

    <!-- ENV 1: Industrial Squeeze - 40cm corridor -->
    <body name="corridor_wall_north" pos="3.0 0.3 0.5">
      <geom name="wall_north" type="box" size="1 0.1 0.5" material="charcoal_wall" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="corridor_wall_south" pos="3.0 -0.3 0.5">
      <geom name="wall_south" type="box" size="1 0.1 0.5" material="charcoal_wall" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
  </worldbody>

  <include file="sensor_feet.xml"/>

  <keyframe>
    <key name="home" qpos="0 0 0.35 1 0 0 0 0.1 0.9 -1.8 -0.1 0.9 -1.8 0.1 0.9 -1.8 -0.1 0.9 -1.8"
      ctrl="0.1 0.9 -1.8 -0.1 0.9 -1.8 0.1 0.9 -1.8 -0.1 0.9 -1.8"/>
  </keyframe>
</mujoco>
