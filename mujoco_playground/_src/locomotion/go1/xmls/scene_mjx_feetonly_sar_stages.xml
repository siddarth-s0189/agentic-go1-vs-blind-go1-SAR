<mujoco model="go1 SAR challenge stages">
  <include file="go1_mjx_feetonly_sar.xml"/>

  <statistic center="0 0 0.1" extent="0.8" meansize="0.04"/>

  <visual>
    <headlight diffuse=".8 .8 .8" ambient=".2 .2 .2" specular="1 1 1"/>
    <rgba force="1 0 0 1"/>
    <global azimuth="120" elevation="-20"/>
    <map force="0.01"/>
    <scale forcewidth="0.3" contactwidth="0.5" contactheight="0.2"/>
    <quality shadowsize="8192"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2="1 1 1" width="800" height="800"/>
    <!-- Rough terrain: same assets as Go1JoystickRoughTerrain -->
    <texture type="2d" name="groundplane" file="assets/rocky_texture.png"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance=".8"/>
    <hfield name="hfield" file="assets/hfield.png" size="10 10 .05 1.0"/>
  </asset>

  <worldbody>
    <geom name="floor" type="hfield" hfield="hfield" material="groundplane" contype="1" conaffinity="0" priority="1"
      friction="1.0"/>

    <!-- Spawn at (0,0), Goal at x=5 -->
    <site name="goal" pos="5 0 0" rgba="1 0 0 1" size="0.1"/>

    <!-- Cinematic cameras -->
    <camera name="hero_view" pos="2 0 0.5" xyaxes="1 0 0 0 0.7 0.7" mode="targetbodycom" target="trunk" fovy="60"/>
    <camera name="follow_side" pos="0 1.5 0.3" xyaxes="1 0 0 0 0 1" mode="targetbodycom" target="trunk"/>
    <camera name="birds_eye" pos="2.5 0 3.5" xyaxes="1 0 0 0 1 0" fovy="70"/>

    <!-- ENV 1: Industrial Squeeze - 40cm corridor, 2m runway, static walls at x=3.0 -->
    <body name="corridor_wall_north" pos="3.0 0.3 0.5">
      <geom name="wall_north" type="box" size="1 0.1 0.5" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="corridor_wall_south" pos="3.0 -0.3 0.5">
      <geom name="wall_south" type="box" size="1 0.1 0.5" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <!-- /ENV 1 -->

    <!-- ENV 2: Stairwell Breach - Jagged staircase of offset 15cm blocks (3 up + 3 down). UNCOMMENT TO USE:
    <body name="stairs_parent" pos="0 0 0">
      <body name="step1" pos="0.5 0 0.075">
        <geom name="slab1" type="box" size="0.1 0.6 0.075" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
      <body name="step2" pos="0.8 0.1 0.225">
        <geom name="slab2" type="box" size="0.1 0.6 0.075" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
      <body name="step3" pos="1.1 -0.05 0.375">
        <geom name="slab3" type="box" size="0.1 0.6 0.075" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
      <body name="step4" pos="1.4 0.05 0.3">
        <geom name="slab4" type="box" size="0.1 0.6 0.075" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
      <body name="step5" pos="1.7 -0.08 0.15">
        <geom name="slab5" type="box" size="0.1 0.6 0.075" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
      <body name="step6" pos="2.0 0 0.075">
        <geom name="slab6" type="box" size="0.1 0.6 0.075" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
    </body>
    END ENV 2 -->

    <!-- ENV 3: I-Beam Forest - Long thin beams (box approx; MJX has no cylinder-box). UNCOMMENT TO USE:
    <body name="beam1" pos="0.6 0 0.15" euler="0 0 45">
      <geom name="ibeam1" type="box" size="0.4 0.05 0.05" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam2" pos="1.0 -0.2 0.15" euler="0 0 -30">
      <geom name="ibeam2" type="box" size="0.4 0.05 0.05" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam3" pos="1.2 0.25 0.15" euler="0 0 60">
      <geom name="ibeam3" type="box" size="0.4 0.05 0.05" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam4" pos="1.6 0 0.15" euler="0 0 15">
      <geom name="ibeam4" type="box" size="0.4 0.05 0.05" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam5" pos="1.8 0.18 0.15" euler="0 0 -45">
      <geom name="ibeam5" type="box" size="0.4 0.05 0.05" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam6" pos="2.2 -0.15 0.15" euler="0 0 75">
      <geom name="ibeam6" type="box" size="0.4 0.05 0.05" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam7" pos="2.5 0.1 0.15" euler="0 0 -60">
      <geom name="ibeam7" type="box" size="0.4 0.05 0.05" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam8" pos="2.8 -0.1 0.15" euler="0 0 0">
      <geom name="ibeam8" type="box" size="0.4 0.05 0.05" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam9" pos="3.0 0.2 0.15" euler="0 0 40">
      <geom name="ibeam9" type="box" size="0.4 0.05 0.05" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <body name="beam10" pos="3.2 -0.2 0.15" euler="0 0 -20">
      <geom name="ibeam10" type="box" size="0.4 0.05 0.05" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    END ENV 3 -->

    <!-- ENV 4: Low-Ceiling Crawl - 50cm high ceiling plate spanning 2m. UNCOMMENT TO USE:
    <body name="ceiling" pos="2 0 0.5">
      <geom name="low_ceiling" type="box" size="1 0.75 0.025" condim="3" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    END ENV 4 -->

    <!-- ENV 5: Dynamic Rubble - Loose cubes/spheres with physics (free joints). UNCOMMENT TO USE.
    <body name="rubble1" pos="0.6 0.1 0.08"><freejoint/><geom type="box" size="0.06 0.06 0.06" mass="0.3" condim="3" contype="1" conaffinity="1" group="0"/></body>
    <body name="rubble2" pos="0.8 -0.15 0.08"><freejoint/><geom type="box" size="0.05 0.05 0.05" mass="0.2" condim="3" contype="1" conaffinity="1" group="0"/></body>
    <body name="rubble3" pos="1.0 0.2 0.06"><freejoint/><geom type="sphere" size="0.05" mass="0.15" condim="3" contype="1" conaffinity="1" group="0"/></body>
    <body name="rubble4" pos="1.2 -0.1 0.08"><freejoint/><geom type="box" size="0.04 0.04 0.04" mass="0.1" condim="3" contype="1" conaffinity="1" group="0"/></body>
    <body name="rubble5" pos="1.4 0.15 0.06"><freejoint/><geom type="sphere" size="0.04" mass="0.08" condim="3" contype="1" conaffinity="1" group="0"/></body>
    <body name="rubble6" pos="1.6 -0.2 0.08"><freejoint/><geom type="box" size="0.05 0.05 0.05" mass="0.2" condim="3" contype="1" conaffinity="1" group="0"/></body>
    <body name="rubble7" pos="1.8 0.05 0.06"><freejoint/><geom type="sphere" size="0.045" mass="0.12" condim="3" contype="1" conaffinity="1" group="0"/></body>
    <body name="rubble8" pos="2.0 -0.12 0.08"><freejoint/><geom type="box" size="0.04 0.04 0.04" mass="0.1" condim="3" contype="1" conaffinity="1" group="0"/></body>
    <body name="rubble9" pos="2.2 0.18 0.06"><freejoint/><geom type="sphere" size="0.05" mass="0.15" condim="3" contype="1" conaffinity="1" group="0"/></body>
    <body name="rubble10" pos="2.4 -0.08 0.08"><freejoint/><geom type="box" size="0.05 0.05 0.05" mass="0.2" condim="3" contype="1" conaffinity="1" group="0"/></body>
    END ENV 5 -->
  </worldbody>

  <include file="sensor_feet.xml"/>

  <keyframe>
    <key name="home" qpos="0 0 0.35 1 0 0 0 0.1 0.9 -1.8 -0.1 0.9 -1.8 0.1 0.9 -1.8 -0.1 0.9 -1.8"
      ctrl="0.1 0.9 -1.8 -0.1 0.9 -1.8 0.1 0.9 -1.8 -0.1 0.9 -1.8"/>
  </keyframe>
</mujoco>
