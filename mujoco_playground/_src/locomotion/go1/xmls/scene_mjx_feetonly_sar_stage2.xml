<mujoco model="go1 SAR stage 2 - Stairwell Breach">
  <include file="go1_mjx_feetonly_sar.xml"/>

  <statistic center="0 0 0.1" extent="0.8" meansize="0.04"/>

  <visual>
    <headlight diffuse=".8 .8 .8" ambient=".2 .2 .2" specular="1 1 1"/>
    <rgba force="1 0 0 1"/>
    <global azimuth="120" elevation="-20"/>
    <map force="0.01"/>
    <scale forcewidth="0.3" contactwidth="0.5" contactheight="0.2"/>
    <quality shadowsize="8192"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2="1 1 1" width="800" height="800"/>
    <texture type="2d" name="groundplane" file="assets/rocky_texture.png"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance=".8"/>
    <material name="floor_dark" rgba="0.1 0.1 0.1 1"/>
    <material name="concrete" rgba="0.3 0.3 0.3 1"/>
    <material name="rust_metal" rgba="0.5 0.1 0.05 1" specular="0.8"/>
    <material name="charcoal_wall" rgba="0.15 0.15 0.15 1"/>
    <hfield name="hfield" file="assets/hfield.png" size="10 10 .05 1.0"/>
  </asset>

  <worldbody>
    <light pos="0 0 5" dir="0 0 -1" directional="true" castshadow="true"/>
    <geom name="floor" type="hfield" hfield="hfield" material="groundplane" contype="1" conaffinity="0" priority="1"
      friction="1.0"/>

    <!-- Side walls - flush fit with 1.5m stairs, no gap -->
    <geom name="wall_l" type="box" size="2.5 0.1 1.0" pos="2.5 0.85 1.0" material="charcoal_wall" contype="1" conaffinity="1" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" group="0"/>
    <geom name="wall_r" type="box" size="2.5 0.1 1.0" pos="2.5 -0.85 1.0" material="charcoal_wall" contype="1" conaffinity="1" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" group="0"/>

    <!-- Elevated goal platform at top of stairs (z=0.45, matches step3 height + half step) -->
    <body name="goal_platform" pos="2.3 0 0.45">
      <geom name="platform" type="box" size="0.3 0.4 0.03" material="concrete" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
    </body>
    <site name="goal" pos="2.3 0 0.48" rgba="1 0 0 1" size="0.1"/>

    <camera name="hero_view" pos="2 0 0.5" xyaxes="1 0 0 0 0.7 0.7" mode="targetbodycom" target="trunk" fovy="60"/>
    <camera name="follow_side" pos="0 1.5 0.3" xyaxes="1 0 0 0 0 1" mode="targetbodycom" target="trunk"/>
    <camera name="birds_eye" pos="2.5 0 3.5" xyaxes="1 0 0 0 1 0" fovy="70"/>

    <!-- ENV 2: Stairwell Breach - 1.5m width (y=±0.75), flush with walls at y=±0.85 -->
    <body name="stairs_parent" pos="0 0 0">
      <body name="step1" pos="0.5 0 0.075">
        <geom name="slab1" type="box" size="0.15 0.75 0.075" material="concrete" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
      <body name="step2" pos="0.8 0.04 0.225">
        <geom name="slab2" type="box" size="0.15 0.75 0.075" material="concrete" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
      <body name="step3" pos="1.1 -0.03 0.375">
        <geom name="slab3" type="box" size="0.15 0.75 0.075" material="concrete" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
      <body name="step4" pos="1.4 0.05 0.3">
        <geom name="slab4" type="box" size="0.15 0.75 0.075" material="concrete" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
      <body name="step5" pos="1.7 -0.06 0.15">
        <geom name="slab5" type="box" size="0.15 0.75 0.075" material="concrete" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
      <body name="step6" pos="2.0 0.02 0.075">
        <geom name="slab6" type="box" size="0.15 0.75 0.075" material="concrete" condim="3" margin="0.02" gap="0.01" friction="1.2 0.005 0.0001" contype="1" conaffinity="1" group="0"/>
      </body>
    </body>
  </worldbody>

  <include file="sensor_feet.xml"/>

  <keyframe>
    <key name="home" qpos="0 0 0.35 1 0 0 0 0.1 0.9 -1.8 -0.1 0.9 -1.8 0.1 0.9 -1.8 -0.1 0.9 -1.8"
      ctrl="0.1 0.9 -1.8 -0.1 0.9 -1.8 0.1 0.9 -1.8 -0.1 0.9 -1.8"/>
  </keyframe>
</mujoco>
